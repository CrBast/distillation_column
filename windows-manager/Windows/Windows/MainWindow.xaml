<Window x:Class="Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Arduino Datas Viewer" Height="450" Width="800" Closing="Window_Closing"
        >
    <Grid>
        <Grid HorizontalAlignment="Left" Width="452" Background="AliceBlue">
            <GroupBox x:Name="Configuration" Header="GroupBox" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="432"/>
            <ListBox x:Name="lbxCom" HorizontalAlignment="Left" Height="43" VerticalAlignment="Top" Width="183" Margin="23,36,0,0" SelectionChanged="lbxCom_SelectionChanged"/>
        </Grid>
        <Grid Height="161" Margin="457,0,0,0" VerticalAlignment="Top">
            <TextBox x:Name="tbxLogs" HorizontalAlignment="Stretch" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="true" VerticalAlignment="Stretch" UseLayoutRounding="False"/>
        </Grid>
        <Grid Margin="457,166,0,0" Background="Beige"/>
    </Grid>
</Window>
